@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
   <meta charset="utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
   <title>Regi's</title>
</head>


<body>

   <nav class="navbar navbar-light bg-light">
      <div class="container">
         <span class="navbar-brand mb-0 h1">PIZZERIA REGI'S</span>
      </div>
   </nav>

   <main>
      <div class="container">
         <div class="row mt-3">
            <table class="table">
               <thead>
                  <tr>
                     <th scope="col">Nome</th>
                     <th scope="col">Descrizione</th>
                     <th scope="col">Foto</th>
                     <th scope="col">Prezzo</th>
                  </tr>
               </thead>
               <tbody>
                  <tr>
                     <th scope="row">Marinara</th>
                     <td>Pomodoro - origano - aglio - olio</td>
                     <td><img src="~/img/marinara.jpg" alt="Pizza Marinara" class="img-fluid" style="height:200px"></td>
                     <td>€ 4,00</td>
                  </tr>
                  <tr>
                     <th scope="row">Margherita</th>
                     <td>Pomodoro - mozzarella</td>
                     <td><img src="~/img/margherita.jpg" alt="Pizza Margherita" class="img-fluid" style="height:200px"></td>
                     <td>€ 5,00</td>
                  </tr>
                  <tr>
                     <th scope="row">Capricciosa</th>
                     <td >Pomodoro - mozzarella - funghi - olive - capperi</td>
                     <td><img src="~/img/capricciosa.jpg" alt="Pizza Capricciosa" class="img-fluid" style="height:200px"></td>
                     <td>€ 6,00</td>
                  </tr>
               </tbody>
            </table>
         </div>
      </div>
      
   </main>


</body>

</html>